<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.HQ">
        <item name="colorPrimary">@color/theme_blue</item>
        <item name="colorPrimaryDark">@color/theme_blue_pressed</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



    <style name="AppTheme.NoActionBar.CheckInOut">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green_dark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Connecticut">
        <item name="colorPrimary">@color/theme_blue_light</item>
        <item name="colorPrimaryDark">@color/theme_blue_light_pressed</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.NoActionBar.East">
        <item name="colorPrimary">@color/theme_orange_dark</item>
        <item name="colorPrimaryDark">@color/theme_orange_dark_pressed</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.West">
        <item name="colorPrimary">@color/theme_yellow</item>
        <item name="colorPrimaryDark">@color/theme_yellow_pressed</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.NoActionBar.Village">
        <item name="colorPrimary">@color/theme_red_dark</item>
        <item name="colorPrimaryDark">@color/theme_red_dark_pressed</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Hudson">
        <item name="colorPrimary">@color/theme_purple</item>
        <item name="colorPrimaryDark">@color/theme_purple_pressed</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.FullScreen">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="btnSubmitOrDoneLarge">
        <item name="android:background">@drawable/btn_selector_green_square</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="btnEntryLarge">
        <item name="android:background">@drawable/btn_selector_theme</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="btnErrorOrLogoutLarge">
        <item name="android:background">@drawable/btn_selector_red_square</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="btnMenu">
        <item name="android:background">@drawable/btn_selector_gray_square</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="homeBtnMenu">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
